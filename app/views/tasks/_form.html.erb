<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 ">
    <%= form_for(task) do |task_instance| %>
    
      <% if task.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  
      <div class="form-group">
        <%= task_instance.label :content, 'タスク名' %>
        <%= task_instance.text_field :content, class: 'form-control' %>
      </div>
  
      <div class="form-group">
        <%= task_instance.label :status, '状態' %>
        <%= task_instance.text_field :status, class: 'form-control' %>
      </div>

      <%= task_instance.submit '確定', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>